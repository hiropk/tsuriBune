<h1 class="font-bold text-4xl">
  <%= t('ship_captain.title')%>
</h1>

<div>
  <%= link_to t('ship_captain.button.micropots'), ship_captain_home_path, class: "px-7 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-blue-500" %>
  <%= link_to t('ship_captain.button.static_page_edit'), ship_captain_page_edit_path, class: "px-7 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-blue-500" %>
  <%= link_to t('ship_captain.button.menu_edit'), menus_path, class: "px-7 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-blue-500" %>
  <%= link_to t('ship_captain.button.fishing_service_info_edit'), fishing_service_info_path(FishingServiceInfo.first), class: "px-7 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-blue-500" %>
  <%= link_to t('ship_captain.button.schedule_edit'), schedules_path, class: "px-7 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-blue-500" %>
  <%= link_to t('ship_captain.button.link_edit'), ship_captain_link_edit_path, class: "px-7 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-blue-500" %>
  <%= link_to t('ship_captain.button.safety_info_edit'), ship_captain_safety_info_edit_path, class: "px-7 py-1 bg-blue-400 text-white font-semibold rounded hover:bg-blue-500" %>
</div>

<div class="text-right">
  <% if authenticated? %>
    <p><%= Current.user.email_address %></p>
    <%= link_to t('dictionary.logout'), session_path, data: { "turbo-method": :delete}, class: "font-bold text-blue-700" %>
  <% else %>
    <%= link_to t('dictionary.login'), new_session_path, class: "font-bold text-blue-700" %>
  <% end %>
</div>
