<%= turbo_frame_tag "main-contents" do %>
  <%= render 'ship_captain/buttons' %>

  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Menus" %>

    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Menus</h1>
      <div><%= link_to "New menu", new_menu_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %></div>
    </div>

    <div id="menus" class="min-w-full">
      <% @menus.each do |menu| %>
        <%= render menu %>
        <p>
          <%= link_to "Show this menu", menu, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
