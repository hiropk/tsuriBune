<%= render 'ship_captain/ship_captain_head' %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Links" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">
      <%= t('ship_captain.link_edit.title')%>
    </h1>
    <div class="text-right"><%= link_to "+新規作成", new_link_path, class: "font-bold text-teal-500 w-4/5" %></div>
  </div>

  <div class="relative overflow-x-auto">
    <table class="text-lg text-left rtl:text-right text-gray-500 dark:text-gray-400 w-full">
      <thead class="text-lg text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">
              リンク名
          </th>
          <th scope="col" class="px-6 py-3">
              リンク先のアドレス
          </th>
          <th scope="col" class="px-6 py-3">
              リンクの説明文
          </th>
          <th scope="col" class="px-6 py-3">
              操作
          </th>
        </tr>
      </thead>
      <tbody>
        <% @links.each do |link| %>
          <%= render partial: 'link_table', locals: {link: link} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
